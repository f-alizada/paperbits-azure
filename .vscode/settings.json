// Place your settings in this file to overwrite default and user settings.
{
    "files.exclude": {
        "node_modules/": true,
        "dist/**": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        ".*/": true
    },
    "search.exclude": {
        "node_modules/": true,
        "dist/**": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/*.js": {
            "when": "$(basename).ts"
        },
        ".*/": true
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": false
}